{
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":maintainLockFilesWeekly",
    ":disableDependencyDashboard"
  ],
  "packageRules": [
    {
      "packageNames": ["node"],
      "enabled": false
    }
  ],
  "lockFileMaintenance": {
    "schedule": "at any time",
    "enabled": true
  },
  "postUpgradeTasks": {
    "fileFilters": [
      "private-actions/*/node_modules"
    ]
  }
}
